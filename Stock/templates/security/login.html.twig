{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}<link href="{{ asset('styles/login.css') }}" rel="stylesheet">{% endblock %}
{% block body %}
    <div class="auth-container">
        <h1>Iniciar Sesión</h1>

        {% if error %}
            <div class="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        
        <form action="{{ path('app_login') }}" method="post">
            <label for="username">Email:</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="_password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit">Iniciar Sesión</button>
        </form>
    </div>
{% endblock %}